@model ChatLuongComputer.Models.MProduct
@{
    ViewBag.Title = @Model.Name;
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
@Html.Partial("_Nofit")
<section class="main-content-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="bstore-breadcrumb">
                    <a href="~/">Trang Chủ<span><i class="fa fa-caret-right"></i> </span> </a>
                    <span> @Model.Name</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-sm-4 col-xs-12">
                        <div class="single-product-view">
                            <div class="tab-content">
                                <div class="tab-pane active" id="thumbnail_1">
                                    <div class="single-product-image">
                                        <img src="~/Public/library/product/@Model.Image" alt="@Model.Name" />
                                        <a class="new-mark-box" href="#">new</a>
                                        <a class="fancybox" href="~/Public/library/product/@Model.Image" data-fancybox-group="gallery"><span class="btn large-btn">View larger <i class="fa fa-search-plus"></i></span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-7 col-sm-8 col-xs-12">
                        <div class="single-product-descirption">
                            <h2>@Model.Name</h2>

                            <div class="single-product-review-box">
                                <div class="rating-box">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="read-reviews">

                                </div>
                                <div class="write-review">

                                </div>
                            </div>
                            <div class="single-product-condition">
                                <p>Sản phẩm có sẵn: <span>@Model.Quantity</span></p>
                                <p>Tình trạng: <span>New</span></p>
                            </div>
                            <div class="single-product-price">
                                <h2>@String.Format("{0:0,0₫}", Model.ProPrice)</h2>
                                <br />
                                <h2><del>@String.Format("{0:0,0₫}", Model.Price)</del></h2>
                            </div>
                            <div class="single-product-desc">
                                <p>@Html.Raw(Model.Detail)</p>
                                @*<div class="product-in-stock">
                            <p>300 Items<span>In stock</span></p>
                        </div>*@
                            </div>

                            <div class="single-product-quantity">
                                <p class="small-title" style="font-size: 15px; margin-top: 3px">Số lượng:</p>
                                <div class="cart-quantity">
                                    <div class="cart">
                                        <input style="margin-left: -10px" class="cart-plus-minus sing-pro-qty" type="number" id="qtyDpt" name="" value="1" min="1">
                                    </div>
                                </div>
                            </div>
                            <div class="single-product-add-cart">
                                <button class="add-cart-text" id="buy-btn" data-id="@Model.ID" title="Thêm vào giỏ hàng" href="#">Thêm vào giỏ hàng</button>
                                <div class="error-message" style="display: none; color: red; padding-top: 5px"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="product-more-info-tab">
                            <ul class="nav nav-tabs more-info-tab">
                                <li class="active">
                                    <a href="#moreinfo" data-toggle="tab">Chi tiết</a>
                                </li>
                                <li>
                                    <a href="#specification" data-toggle="tab">Thông số kỹ thuật</a>
                                </li>
                            </ul>

                            <div class="tab-content">
                                <!-- Tab Chi tiết -->
                                <div class="tab-pane active" id="moreinfo">
                                    <div class="tab-description">
                                        <p>@Html.Raw(Model.Description)</p>
                                    </div>
                                </div>

                                <!-- Tab Thông số kỹ thuật -->
                                <div class="tab-pane" id="specification">
                                    <div class="tab-description">
                                        <p>@Html.Raw(Model.Specification)</p>
                                    </div>
                                </div>

                                @*<div class="sharethis-sticky-share-buttons"></div>*@
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <div class="left-title-area">
                            <h2 class="left-title">Sản phẩm cùng danh mục</h2>
                        </div>
                    </div>
                    <div class="related-product-area featured-products-area">
                        <div class="col-sm-12">
                            <div class=" row">
                                <div class="related-product">
                                    @foreach (var item in ViewBag.listother)
                                    {
                                        <div class="item">
                                            <div class="single-product-item">
                                                <div class="product-image">
                                                    <a href="~/@item.Slug"><img src="~/Public/library/product/@item.Image" alt="@item.Name" /></a>
                                                </div>
                                                <div class="product-info">
                                                    <div class="customar-comments-box">
                                                        <div class="rating-box">
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star-half-empty"></i>
                                                        </div>
                                                        @*<div class="review-box">
                                                    <span>1 Review(s)</span>
                                                </div>*@
                                                    </div>
                                                    <a href="@item.Slug">@item.Name</a>
                                                    <div class="price-box">
                                                        <span class="price">@String.Format("{0:0,0₫}", item.ProPrice)</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <div class="single-product-right-sidebar">
                    <h2 class="left-title">Sản phẩm vừa nhập về</h2>
                    <ul>
                        @foreach (var item in ViewBag.news)
                        {
                            <li>
                                <a href="#"><img src="~/Public/library/product/@item.Image" width="80px;" alt="@item.Name" /></a>
                                <div class="r-sidebar-pro-content">
                                    <h5><a href="~/@item.Slug">@item.Name</a></h5>
                                    <h2 style="color:red;">@String.Format("{0:0,0₫}", item.ProPrice)</h2>
                                    <h3><del>@String.Format("{0:0,0₫}", item.Price)</del></h3>
                                    <p>@item.MetaDesc</p>
                                </div>
                            </li>
                        }

                    </ul>
                </div>
                <div class="category-tag">
                    <h2 class="left-title">Tag</h2>
                    @foreach (var item in ViewBag.news)
                    {
                        <a href="~/@item.Slug" style="display: inline-block; padding: 5px 10px; background: #f0f0f0; border-radius: 20px; margin: 4px 4px; font-size: 13px; color: #333; text-decoration: none;">
                            @item.Name
                        </a>
                    }
                </div>


            </div>
        </div>
    </div>
</section>

<script>
    function Cong() {
        const num = parseInt($('.etd').val());
        if (num < 99) {
            $('.etd').val(num + 1);
        }
    }
    function Tru() {
        const num = parseInt($('.etd').val());
        if (num > 1) {
            $('.etd').val(num - 1);
        }
    }
    function displayError(message) {
        $('.error-message').text(message);
        $('.error-message').fadeIn();
        setTimeout(function() {
            $('.error-message').fadeOut();
        }, 3000); // 3 giây sau đó thông báo sẽ tự động ẩn đi
    }
    function FullError(message) {
        $('.error-message').text(message);
        $('.error-message').fadeIn();
    }// không tự ẩn thông báo 

    function CheckStock() {
        var quantity = parseInt($('#qtyDpt').val());
        var stock = parseInt('@Model.Quantity');
        var buyBtn = $('#buy-btn');

        if (stock === 0) {
            FullError('Sản phẩm này đã hết hàng!');
            $('#qtyDpt').val(0);
            buyBtn.hide(); // Ẩn nút "Thêm vào giỏ hàng"
        } else if (quantity > stock) {
            displayError('Số lượng bạn chọn vượt quá số lượng tồn kho!');
            $('#qtyDpt').val(stock); // Set số lượng về số lượng tồn kho tối đa
        } else {
            buyBtn.show(); // Hiển thị nút "Thêm vào giỏ hàng" nếu sản phẩm có sẵn
        }
    }

    $('#qtyDpt').change(function() {
        CheckStock();
    });

    $('#buy-btn').click(function() {
        CheckStock();
        // Thực hiện các hành động khi người dùng thêm vào giỏ hàng
    });

    // Kiểm tra số lượng tồn kho khi trang được tải
    $(document).ready(function() {
        CheckStock();
    });
</script>