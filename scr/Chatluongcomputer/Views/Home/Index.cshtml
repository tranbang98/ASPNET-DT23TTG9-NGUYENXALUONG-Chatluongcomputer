@model dynamic
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header -->
<header class="py-3 border-bottom d-flex justify-content-between align-items-center">
    <div>
        <img src="/Content/Image/logo/logo.jpg" alt="Logo" height="40" />
    </div>
    <div class="input-group w-50">
        <input type="text" class="form-control" placeholder="Tìm sản phẩm...">
        <button class="btn btn-primary">Tìm kiếm</button>
    </div>
    <div>
        @Html.ActionLink("Đăng nhập Khách", "Login", "Customer", null, new { @class = "btn btn-outline-secondary" })
        @Html.ActionLink("Đăng nhập Admin", "Login", "Admin", null, new { @class = "btn btn-outline-warning ms-2" })
    </div>
</header>

<!-- Banner -->
<section class="my-4 bg-light p-4 text-center">
    <h1>Ưu đãi đặc biệt cho bạn!</h1>
    <p>FREESHIP & RETURNS - LOYALTY PROGRAM</p>
    <div class="d-flex justify-content-center gap-3">
        <button class="btn btn-outline-primary">Free Shipping</button>
        <button class="btn btn-outline-success">Loyalty Program</button>
    </div>
</section>

<!-- Sản phẩm nổi bật -->
<section class="container">
    <h3>Sản phẩm nổi bật</h3>
    <div class="row">
        @for (int i = 0; i < 4; i++) {
            <div class="col-md-3 mb-4">
                <div class="card">
                    <img class="card-img-top" src="/Content/Image/product-placeholder.png" alt="Sản phẩm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Product name</h5>
                        <p class="card-text">$00.00</p>
                        <button class="btn btn-primary">Add to Cart</button>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- Recommended -->
<section class="container mt-5">
    <h3>Dành cho bạn</h3>
    <div class="row">
        @for (int i = 0; i < 4; i++) {
            <div class="col-md-3 mb-4">
                <div class="card">
                    <img class="card-img-top" src="/Content/Image/product-placeholder.png" alt="Sản phẩm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Product name</h5>
                        <p class="card-text">$00.00</p>
                        <button class="btn btn-primary">Add to Cart</button>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
