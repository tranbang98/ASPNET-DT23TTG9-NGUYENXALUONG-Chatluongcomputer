<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #fdf1b4;
        }

        .sidebar {
            background-color: #315681;
            min-height: 100vh;
            color: white;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 12px 18px;
            }

                .sidebar a:hover {
                    background-color: #2c4768;
                }

            .sidebar h4 {
                padding: 15px;
                margin: 0;
            }

        .content-area {
            padding: 20px;
        }

        .logo-admin {
            font-size: 20px;
            font-weight: bold;
            padding: 15px;
            background-color: #26486b;
            color: white;
            text-align: center;
        }
    </style>
</head>
@RenderSection("Scripts", required: false)
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar d-flex flex-column">
                <div class="logo-admin">🔧 Quản Trị</div>
                <a href="/Admin/Index">Quản lý Admin</a>
                <a href="/Customer/Index">Khách hàng</a>
                <a href="/Product/Index">Sản phẩm</a>
                <a href="#">Nội dung</a>
                <a href="#">Đơn hàng</a>
                <a href="#">Vận chuyển</a>
                <a href="#">Thanh toán</a>
                <a href="#">SEO</a>
                <a href="#">Email marketing</a>
                <a href="#">Khuyến mãi</a>
                <a href="#">Upload file</a>
                <a href="#">Tracking</a>
            </div>

            <!-- Nội dung chính -->
            <div class="col-md-10 content-area">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
