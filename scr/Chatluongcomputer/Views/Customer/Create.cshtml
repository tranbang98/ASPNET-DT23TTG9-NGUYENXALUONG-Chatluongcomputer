@model Chatluongcomputer.Models.Customer

@using (Html.BeginForm("Create", "Customer", FormMethod.Post, new { @id = "createForm", @class = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.FullName, "Họ tên khách hàng")
        @Html.TextBoxFor(model => model.FullName, new { @class = "form-control" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.Phone, "Số điện thoại")
        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
}
